@model IEnumerable<Carshops_MVC.Office>
@{
    ViewBag.Title = "All offices";
}
<h1>Offices</h1>
<p>
    <a asp-action="Create" asp-controller="Home" asp-route-officeid="@ViewBag.OfficeId">Add new office</a>
</p>

<!-- Edit -->
<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1>Edit</h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a asp-action="Edit" asp-route-officeid="@ViewBag.OfficeId" class="btn btn-primary">Save</a>
      </div>
    </div>
  </div>
</div>

<!-- Delete -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1>Delete</h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a asp-action="Delete" asp-route-officeid="@ViewBag.OfficeId" class="btn btn-danger">Confirm</a>
      </div>
    </div>
  </div>
</div>

<table class="table">
    <tr>
        <td>Brand</td>
        <td>Type</td>
        <td>Id</td>
        <td>Cars list</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Brand</td>
            <td>@item.Type</td>
            <td>@item.OfficeId</td>
            <td><a asp-action="CarItemsIndex" asp-route-officeid="@item.OfficeId" class="btn btn-primary">Open</a></td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#edit">Edit</button>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete">Delete</button>
                </div>
            </td>
        </tr>
     }
</table>