@model IEnumerable<Carshops_MVC.Office>
@{
    ViewBag.Title = "All offices";
}
<h1>Offices</h1>
<p>
    <a class="my" asp-action="Create" asp-controller="Home" asp-route-officeid="@ViewBag.OfficeId">Add new office</a>
</p>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1>SOSI</h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<table class="table">
    <tr>
        <td>Brand</td>
        <td>Type</td>
        <td>Id</td>
        <td>Cars list</td>
        <td>Action</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Brand</td>
            <td>@item.Type</td>
            <td>@item.OfficeId</td>
            <td><a asp-action="CarItemsIndex" asp-route-officeid="@item.OfficeId">Open</a></td>
            <td>
                <button type="button" data-toggle="modal" data-target="#exampleModalCenter">
                    <a asp-action="Edit" asp-route-officeid="@ViewBag.OfficeId">Edit</a> |
                </button>
                <button type="button" data-toggle="modal" data-target="#exampleModalCenter">|
                    <a asp-action="Delete" asp-route-officeid="@ViewBag.OfficeId">Delete</a>
                </button>
            </td>
        </tr>
     }
</table>